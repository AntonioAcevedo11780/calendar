<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane"
            prefHeight="650.0"
        prefWidth="500.0"
        stylesheets="@../css/dialog-styles.css"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.utez.calendario.controllers.ShareCalendarDialogController">
    <children>
    <!-- Header con botón cerrar -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Compartir Calendario" HBox.hgrow="ALWAYS" />
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" styleClass="close-btn-modern" text="✕" />
        </children>
    </HBox>

    <!-- Contenido principal -->
    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="50.0">
        <content>
            <VBox spacing="20.0">
                <children>
                    <!-- Información del calendario -->
                    <VBox spacing="15.0" styleClass="info-section" >
                        <children>
                            <VBox spacing="8.0">
                                <padding>
                                    <Insets top="10.0" />
                                </padding>
                                <children>
                                    <Label text="Nombre:" styleClass="field-label" />
                                    <TextField fx:id="calendarNameField" styleClass="readonly-field" />
                                </children>
                            </VBox>

                        </children>
                    </VBox>

                    <!-- Compartir por Email -->
                    <VBox spacing="15.0" styleClass="share-section">
                        <children>
                            <Label text="Compartir por Email" styleClass="section-title" />
                            <Label text="Invita a personas específicas mediante correo electrónico" styleClass="description-text" />

                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <TextField fx:id="emailField" promptText="email@ejemplo.com" styleClass="email-field" HBox.hgrow="ALWAYS" />
                                <Button fx:id="addEmailButton" text="Agregar" onAction="#handleAddEmail" styleClass="action-button" />
                            </HBox>

                            <Label fx:id="emailErrorLabel" styleClass="error-label" wrapText="true" />

                            <ListView fx:id="emailListView" styleClass="email-list-view" prefHeight="100.0">
                                <placeholder>
                                    <Label text="No hay emails agregados" styleClass="placeholder-text" />
                                </placeholder>
                            </ListView>

                            <Button fx:id="sendInvitationsButton" text="Enviar Invitaciones" onAction="#handleSendInvitations" styleClass="primary-button" />
                        </children>
                    </VBox>

                    <!-- Botones principales -->
                    <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20 0 0 0;">
                        <children>
                            <Button fx:id="cancelButton" text="Cerrar" onAction="#handleCancel" styleClass="cancel-button" />
                            <Button fx:id="saveButton" text="Guardar" onAction="#handleSave" styleClass="primary-button" defaultButton="true" />
                        </children>
                    </HBox>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
                </padding>
            </VBox>
        </content>
    </ScrollPane>
    </children>
</AnchorPane>