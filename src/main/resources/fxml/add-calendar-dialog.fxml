<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="350.0" prefWidth="450.0" styleClass="dialog-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utez.calendario.controllers.AddCalendarDialogController">
    <children>
        <!-- Header con botón cerrar -->
        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Añadir Calendario" HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" styleClass="close-button-modern" text="✕" />
            </children>
        </HBox>

        <!-- Contenido principal -->
        <VBox layoutX="14.0" layoutY="45.0" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="45.0">
            <children>
                <!-- Campo Nombre -->
                <VBox spacing="5.0">
                    <children>
                        <Label text="Nombre del calendario:" />
                        <TextField fx:id="nameField" promptText="Ingresa el nombre del calendario..." />
                    </children>
                </VBox>

                <!-- Selección de Color -->
                <VBox spacing="5.0">
                    <children>
                        <Label text="Color del calendario:" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <ComboBox fx:id="predefinedColorBox" prefWidth="200.0" promptText="Seleccionar color predefinido" />
                                <Label text="o" />
                                <ColorPicker fx:id="colorPicker" prefWidth="80.0" />
                            </children>
                        </HBox>
                        <Label fx:id="colorPreviewLabel" style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="Vista previa del color seleccionado" />
                    </children>
                </VBox>

                <!-- Campo Descripción -->
                <VBox spacing="5.0">
                    <children>
                        <Label text="Descripción (opcional):" />
                        <TextArea fx:id="descriptionField" prefHeight="80.0" prefWidth="200.0" promptText="Describe el propósito de este calendario..." wrapText="true" />
                    </children>
                </VBox>

                <!-- Botones de acción -->
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="cancel-button" text="Cancelar" />
                        <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSave" styleClass="save-button" text="Guardar Calendario" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>